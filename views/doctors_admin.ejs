<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->

    <link href="/css/doctors_admin.css" rel="stylesheet">

    <title> doctors </title>



</head>

<body>

    <div class="container">
        <img src="/images/doctor.jpg" width="350px" height="550px" class="dr_img">
        <div class="dr_table">
            <div class="navbar">
                <div class="title"> Doctors and their majors</div>

            </div>

            <div class="section bars active">
                <% doctors.forEach(doctor => { %>
                    <div onclick="openPopup('<%= doctor.doctor_id %>')">
                        
                        <% if (doctor.sex === 'male') { %>
                            <img src="/images/Dr icon.png" alt="Male Doctor Image" class="logo" name="sex" value="male">
                        <% } else { %>
                            <img src="/images/drr.png" alt="Female Doctor Image" class="logo" name="sex" value="female">
                        <% } %>
                        <p>Dr. <%= doctor.fname %>  <%= doctor.lname %></p>
                        <p><%= doctor.major %></p>
                    </div>
                <% }); %>



            </div>
            <button class="Add_btn" id="ADD_btn"> ADD Doctor </button>





            <div class="slideshow-container">
                <div class="slideshow">
                    <img src="/images/1 (6).jpg" alt="Image 2" width="250px" height="300px">
                    <img src="/images/1 (1).jpg" alt="Image 1" width="250px" height="300px">
                    <img src="/images/1 (3).jpg" alt="Image 3" width="250px" height="300px">
                    <img src="/images/1 (7).jpg" alt="Image 4" width="250px" height="300px">
                </div>
            </div>
            <div class="boxx">
                <div class="skill">
                    <div class="outer">
                        <div class="inner">
                            <div class="number" id="number">65%</div>
                        </div>
                    </div>

                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="220px" height=220px">
                        <defs>
                            <linearGradient id="GradientColor">
                                <stop offset="0%" stop-color="   #b9ddde" />
                                <stop offset="100%" stop-color=" #315772" />
                            </linearGradient>
                        </defs>
                        <circle class="circle1" cx="115" cy="100" r="80" stroke-linecap="round" />

                    </svg>
                    <p class="svg_caption">women</p>
                </div>



            </div>
        </div>




    </div>
    </div>
    <div id="popupContainer" class="popup-container">
        <div class="popup-content">
            <!-- Content for the popup window -->
            <img class="profile_photo" id="picture2" name="picture" src="" width="170"
            height="170">
            <input type="hidden" id="radiologist_id" name="radiologist_id">
                
                <div>
                    <label for="fullName">Full Name:</label>
                    <input type="text" id="Name" name="Name">
                </div>
                
                <div>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" >
                </div>
                
                <div>
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address">
                </div>
                
                <div>
                    <label for="age">Age:</label>
                    <input type="number" id="age" name="age">
                </div>
                
                <div>
                    <label for="sex">Sex:</label>
                    <input type="text" id="sex" name="sex">
                </div>
                
                <div>
                    <label for="phone_no">Phone:</label>
                    <input type="text" id="phone_no" name="phone_no">
                </div>
                
                <div>
                    <label for="salary">Salary:</label>
                    <input type="number" id="salary" name="salary">
                </div>
                
                <div>
                    <label for="start_shift">Start Shift:</label>
                    <input type="text" id="start_shift" name="start_shift">
                </div>
                
                <div>
                    <label for="end_shift">End Shift:</label>
                    <input type="text" id="end_shift" name="end_shift" >
                </div>
                
                <div>
                    <label for="password">Change Password:</label>
                    <input type="password" id="password" name="password" maxlength="12">
                </div>
                
                <div>
                    <label for="picture">Picture:</label>
                    <input type="file" id="picture" name="picture" accept="image/*">
                </div>
                
                <div>
                    <input type="submit" value="Save">
                </div>
        </div>
            <div onclick="closePopup()" class="close_btn"> &times; </div>
        </div>
        <script id="doctorsData" type="application/json"><%- JSON.stringify(doctors) %></script>
        <script src="/css/profile2.js"></script>        
</body>
</html>