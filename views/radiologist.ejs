<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/radiologist.css" rel="stylesheet">
    <title> profile </title>
</head>

<body>
    <section class="header">
        <img class="logo" src="/images/logo2.jpg"></img>
        <div class="search">
            <input placeholder="Search..." type="text">
            <button type="submit">Go</button>
        </div>
    </section>


    <section class="profile-block"> <!--PROFILE BLOCK-->
        <div class="profile-head">
            <h2>My Profile</h2>
            <button class="open-file" onclick="openPopup3()">
                <span class="file-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 71 67">
                        <path stroke-width="5" stroke="black"
                            d="M41.7322 11.7678L42.4645 12.5H43.5H68.5V64.5H2.5V2.5H32.4645L41.7322 11.7678Z"></path>
                    </svg>
                    <span class="file-front"></span>
                </span>
            </button>

            <div id="popupContainer3" class="popup-container2">
                <div class="popup-content">
                    <!-- Content for the popup window -->
                    <img class="profile_photo" id="picture2" name="picture" src="/images/<%=picture %>" width="200"
                        height="200">
                    <form action="/rad_profile" method="POST">
                        <div>
                            <label for="fName">Name:</label>
                            <input type="text" name="fullName" placeholder="<%=fname +' '+ lname %>" required>
                        </div>
                        <br>
                        <div>
                            <label for="email">Email:</label>
                            <input type="email" name="email" placeholder="<%=email %>" required>
                        </div>
                        <br>
                        <div>
                            <label for="fName">Address:</label>
                            <input type="text" name="address" placeholder="<%=address%>">
                        </div>
                        <br>
                        <div>
                            <label for="fName">Age:</label>
                            <input type="number" name="age" placeholder="<%=age%>">
                        </div>
                        <br>
                        <div>
                            <label for="fName">Sex:</label>
                            <input type="text" name="sex" placeholder="<%=sex%>">
                        </div>
                        <br>
                        <div>
                            <label for="fName">Phone:</label>
                            <input type="number" name="phone_no" placeholder="<%=phone_no%>">
                        </div>
                        <br>
                        <div>
                            <label for="fName">Salary:</label>
                            <input type="number" name="Salary" placeholder="<%=salary%>" readonly>
                        </div>
                        <br>
                        <div>
                            <label for="fName">Start Shift:</label>
                            <input type="number" name="start_shift" placeholder="<%=start_shift%>" readonly>
                        </div>
                        <br>
                        <div>
                            <label>End Shift:</label>
                            <input type="number" name="end_shift" placeholder="<%=end_shift%>" readonly>
                        </div>
                        <br>
                        <div>
                            <label>Change Password:</label>
                            <input type="number" name="password" placeholder="new password" maxlength="12">
                        </div>
                        <br>
                        <div>
                            <label>Picture:</label>
                            <input type="file" id="fileInput" name="picture" accept="image/*">
                        </div>
                        <br>
                        <div>
                            <input type="submit" value="save">
                        </div>
                    </form>
                    <div onclick="closePopup3()" class="close_btn"> &times; </div>
                </div>
            </div>
        </div>


        <div class="profile-body">
            <img id="profile-photo" name="picture" src="/images/<%=picture %>" class="profile-pic" width="230"
                height="230">
            <div class="profile-details">
                <h2>Dr. <%= fname + " " + lname %>
                </h2>
                <p>Radiologist</p>
            </div>
        </div>
    </section>



    <section class="good-day-section">
        <h1>Good Day, Dr. <%= fname %>
        </h1>
    </section>


    <section class="task-bar">
        <div class="task-bar-title">
            <h2> Task Bar </h>
                <button id="add-task-button">Add</button>
        </div>
        <div class="task-bar-elements" id="task-bar-elements">
            <div class="task-div">
                <p>Report #67</p>
            </div>
            <div class="task-div">
                <p>Report #68</p>
            </div>
            <div class="task-div">
                <p>Report #69</p>
            </div>
        </div>
    </section>

    <!-- Modal for marking task as done -->
    <div id="task-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p>Are you sure you want to mark this task as done?</p>
            <button id="mark-done-button">Mark as Done</button>
        </div>
    </div>

    <!-- Modal for adding a new task -->
    <div id="add-task-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p>Add a new task</p>
            <input type="text" id="new-task-input" placeholder="Enter task title">
            <button id="add-new-task-button">Add Task</button>
