    <section class="contact-form"> <!--Task Bar BLOCK-->
        <h2 class="contact-form-title">
            Got any requests?
        </h2>

        <button class="contact-form-button" id="contact-btn"> Contact Us</button>
        <div id="popupContainer2" class="popup">
